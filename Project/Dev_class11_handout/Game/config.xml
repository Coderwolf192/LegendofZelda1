<!-- Config file for the game -->

<config>
  <app framerate_cap="">
    <title>The Legend of Zelda Hyrule Conquest</title>
    <organization>Summit Games</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <font>
    <default_font file="fonts/open_sans/OpenSans-Regular.ttf" size="12"/>
  </font>

  <gui>
    <atlas file="gui/MenusAtlas.png"/>
  </gui>
  
  <hud>
    <atlas file="gui/HUDAtlas.png"/>
  </hud>
    
  <window>
    <resolution width="1280" height="720" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>
  
  <inputManager>
    
    
 
    <!--ATTACK-->
    <action  button="0" event="0" />

    <!--PICK-->
    <action  button="1" event="1" />
    
    <!--COVER-->
    <action  button="9" event="2" /> 
    
    <!--TUMBLE-->
    <action  button="2" event="3" />

    <!--INTERACT-->
    <action  button="3" event="4" />
    
    <!--Move UP-->
    <action  button="11" event="5" />

    <!--Move DOWN-->
    <action  button="12" event="6" />

    <!--Move LEFT-->
    <action  button="13" event="7" />

    <!--Move RIGHT-->
    <action  button="14" event="8" />

    <!--PAUSE-->
    <action  button="6"  event="9" />


  </inputManager>

</config>